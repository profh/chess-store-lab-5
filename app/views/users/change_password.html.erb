<h1>Change your password</h1>

<%= form_tag user_path(session[:session_secret], @user), :method => :put do %>
	<%= hidden_field(:user, :user_id, :value => @user.id) %>
	
  <table cellpadding="0" cellspacing="0" border="0" width="100%">
    <tr>
      <td width="125">new password</td>
      <td><%= password_field(:user, :password, :value => nil) %></td>
    </tr>
    
    <tr>
      <td>confirm password</td>
      <td><%= password_field(:user, :password_confirmation, :value => nil) %></td>
    </tr>
    
    <tr>
      <td colspan="2" align="right">
        <%= submit_tag 'Change Password' %>
      </td>
    </tr>
  </table>
	<%= hidden_field(:user, :changer, :value => @user.username) %>
<% end %>